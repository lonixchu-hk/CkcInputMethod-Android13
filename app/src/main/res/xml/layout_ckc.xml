<?xml version="1.0" encoding="utf-8"?>
<Keyboard
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:keyWidth="25%p"
    app:horizontalGap="0.3%p"
    app:verticalGap="10px"
    app:keyHeight="45dp"
    app:keyBackground="@drawable/key_background" >

    <!-- First row -->
    <Row>
        <Key app:codes="63" app:keyLabel="?" app:keyWidth="12%p"/>
        <Key app:codes="55" app:keyLabel="7"/>
        <Key app:codes="56" app:keyLabel="8"/>
        <Key app:codes="57" app:keyLabel="9"/>
        <Key app:codes="44" app:keyLabel="符" app:keyWidth="12%p"/>
    </Row>

    <!-- Second row -->
    <Row>
<!--        <Key app:codes="-101" app:keyIcon="@drawable/ic_switch_to_qwerty" app:keyWidth="20%p"/>-->
        <Key app:codes="-12" app:keyLabel="ABC" app:keyWidth="12%p"/>
        <Key app:codes="52" app:keyLabel="4"/>
        <Key app:codes="53" app:keyLabel="5"/>
        <Key app:codes="54" app:keyLabel="6"/>
        <Key app:codes="33" app:keyLabel="!"  app:keyWidth="12%p"/>
    </Row>

    <!-- Third row -->
    <Row>
<!--        <Key app:codes="-102" app:keyIcon="@drawable/ic_switch_to_number_keyboard" app:keyWidth="20%p"/>-->
        <Key app:codes="-13" app:keyLabel="123" app:keyWidth="12%p"/>
        <Key app:codes="49" app:keyLabel="1"/>
        <Key app:codes="50" app:keyLabel="2"/>
        <Key app:codes="51" app:keyLabel="3"/>
<!--        <Key app:codes="-5" app:keyIcon="@drawable/ic_backspace" app:keyWidth="20%p" app:keyEdgeFlags="right"/>-->
        <Key app:codes="-5" app:keyLabel="BK" app:keyWidth="12%p"/>
    </Row>

    <!-- Fourth row -->
    <Row>
        <Key app:codes="32" app:keyLabel="SB" app:keyWidth="12%p"/>
        <Key app:codes="48" app:keyLabel="0"/>
        <Key app:codes="46" app:keyLabel="。"/>
        <Key app:codes="44" app:keyLabel="，"/>
        <Key app:codes="-4" app:keyLabel="Enter" app:keyWidth="12%p"/>
    </Row>
</Keyboard>